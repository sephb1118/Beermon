<%= form_for @beer do |f| %>
  <% if @beer.errors.any? %>
    <div id="error_explanation">
   	  <h2>
   	  	<%= pluralize(@beer.errors.count, "error")%> Could not save this beer you tasted:
   	  </h2>
   	  <ul>
   	  	<% @beer.errors.full_messages.each do |msg| %>
   	  	  <li><%= msg %></li>
   	  	<% end %>
   	  </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">  
  <p>
  	<%= f.label :brewery %><br>
  	<%= f.text_field :brewery, class: 'form-control' %>
  </p>
  
  <p>
  	<%= f.label :name %><br>
  	<%= f.text_field :name, class: 'form-control' %>
  </p>

  <p>
  	<%= f.label :tasting_notes %><br>
  	<%= f.text_area :tasting_notes, class: 'form-control' %>
  </p>
  </div>
</div>
  <p>
  	<div class="btn-group btn-block" id="logsign">
      <%= f.submit "Add This Beer", class: "btn btn-primary" %>
      <%= link_to "Haven't Tasted It", user_path(current_user), class: "btn btn-primary" %>
    </div>
  </p>
<% end%>